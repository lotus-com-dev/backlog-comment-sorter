{
    "manifest_version": 3,
    "name": "Backlog Comment Sorter",
    "version": "2.0",
    "description": "Backlogの課題ページにコメントのソート切り替えボタンを自動で追加します。",
    "permissions": [
        "storage",
        "tabs"
    ],
    "action": {
        "default_popup": "dist/popup.html",
        "default_title": "Backlog Comment Sorter"
    },
    "background": {
        "service_worker": "dist/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.backlog.com/view/*",
                "https://*.backlog.jp/view/*"
            ],
            "js": [
                "dist/sort-comments.js"
            ],
            "run_at": "document_idle"
        }
    ]
}