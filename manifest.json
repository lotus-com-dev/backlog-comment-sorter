{
    "manifest_version": 3,
    "name": "Backlog Comment Sorter",
    "version": "2.0",
    "description": "Backlogの課題ページにコメントのソート切り替えボタンを自動で追加します。",
    "permissions": [
        "storage",
        "tabs",
        "webNavigation"
    ],
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_title": "Backlog Comment Sorter"
    },
    "background": {
        "service_worker": "src/background/index.tsx",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.backlog.com/*",
                "https://*.backlog.jp/*"
            ],
            "js": [
                "src/content/index.tsx"
            ],
            "run_at": "document_idle"
        }
    ]
}